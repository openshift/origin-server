-#:css
  .application_type {background-color: #F5F5F5; padding: 9px 35px 10px 21px; margin-bottom: 20px;}
  .application_type > ul.meta > li {display: inline;}
  .application_type > ul.meta > li > label {display: inline;}

%h1.invisible Configure New Application
= app_wizard_steps_create 1
= flashes

= render :partial => @application_type, :locals => {:hide_link => true, :extra_info => true, :classes => 'tile'}

= semantic_form_for @application, :html => {:class => 'form-horizontal'} do |f|
  = f.hidden_field :application_type, :value => @application_type.id

  - errors = @application.errors.full_messages.present?
  = f.semantic_errors :name, :domain_name, :node_profile

  = f.inputs do
    -# This is implemented custom here rather than integrating into Formtastic because of its specific nature
    .control-group.control-group-important{:data => errors ? {:"server-error" => 'true'} : {}}
      %label.control-label Public URL
      .controls
        .input-prepend-append
          %span.add-on-first http://

          = f.text_field :name, 
            :value => "#{@application.name}", 
            :autofocus => true, 
            :maxlength => 32, 
            :placeholder => 'Application name', 
            :class => "application_name #{'error' if @application.errors.include? :name}"

          -# If the user has a domain, use it, otherwise prompt them for that field
          - if @domain and @domain.persisted?

            %span.add-on-last> -#{@domain.name}.#{Rails.configuration.base_domain}

          - else

            %span.add-on-middle> &ndash;
            = f.text_field :domain_name, 
              :value => "#{@application.domain_name}", 
              :placeholder => 'Namespace', 
              :maxlength => 16, 
              :class => "domain_name #{'error' if @application.errors.include? :domain_name}"
            %span.add-on-last>= ".#{Rails.configuration.base_domain}"
        -#.row.control-group.error
          #app-errors.span
        .row
          - if @domain and @domain.persisted?
            .help-block.span6
              Your application name uniquely identifies the application and becomes part of your public 
              URL. You can add your own domain names to the application later.
          - else
            .help-block-multiple.span8
              %strong Application name
              %p
                Your application name uniquely identifies the application and becomes part of your public 
                URL. You can add your own domain names to the application later.
              %strong Namespace
              %p
                Because this is your first application, you need to set a name under which your applications will be grouped
    -# if @gear_sizes and @gear_sizes.length > 1
      .control-group
        %label{:for => :gear_profile, :class => "control-label"} Gear Size
        = f.input :gear_profile, :collection => options_for_select(@gear_sizes, @gear_sizes[0]), :include_blank => false, :class => @application.errors[:node_profile].present? ? 'error' : '', :label => false
        .row
          .controls
            .help-block.span6
              Different gear sizes may be available for your application.  For most
              application the
              %strong small
              gear size provides plenty of resources to run in.  If you require
              more resources you may change it here.


  = f.buttons do
    = link_to "Back", application_types_path, :class => 'btn'
    = f.commit_button :button_html => { :name => 'submit' } 
    = f.loading
