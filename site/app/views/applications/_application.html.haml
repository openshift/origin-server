%header
  %h2
    = application.name
%dl.app_info
  %dt
    Public url
  %dd.app_url
    = link_to application.web_url, application.web_url

  %dt
    Repository
  %dd.app_git
    = application.git_url

  %dt
    Type
  %dd.app_type
    = application.framework_name

  %dt
    Created
  %dd.app_creation_time
    = "#{time_ago_in_words(application.creation_time)} ago"

%div
  = link_to("Details...", application_path(application))
  = link_to("Delete", delete_application_path(application))
