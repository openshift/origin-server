def usage
  puts <<USAGE
== Synopsis

#{$0}: Adds a set of user environment variables to the app.
  This command must be run as root.

== Usage

#{$0}  --with-app-uuid APP_UUID \\
       --with-container-uuid UUID \\
       [--with-variables "KEY0=VALUE0 KEY1=VALUE1"] \\
       [--with-gears GEAR_DNS;GEAR_DNS]

Options:
-h|--help:
   Prints this message

UUID: Unique identifier for the application
GEAR_DNS: secondary gears to be updated after adding user variables
KEY VALUE pairs
At least --with-variables or --with-gears must be specified
USAGE
  exit 1
end

require 'rubygems'
require 'openshift-origin-node'
require 'openshift-origin-node/utils/shell_exec'

opts = GetoptLong.new(
    ['--with-app-uuid', '-a', GetoptLong::REQUIRED_ARGUMENT],
    ['--with-container-uuid', '-c', GetoptLong::REQUIRED_ARGUMENT],
    ['--with-variables', '-v', GetoptLong::OPTIONAL_ARGUMENT],
    ['--with-gears', '-g', GetoptLong::OPTIONAL_ARGUMENT]
)

container_uuid, app_uuid, variables, gears = '', '', {}, []
begin
  opts.each do |opt, arg|
    case opt
      when '--with-app-uuid'
        app_uuid = arg
      when '--with-container-uuid'
        container_uuid = arg
      when '--with-variables'
        arg.split(' ').each { |a| token = a.split('=', 2); variables[token.first] = token.last }
      when '--with-gears'
        gears = arg.split(';')
      when '--help'
        usage
    end
  end
rescue GetoptLong::Error => e
  usage
end

if container_uuid.empty? or app_uuid.empty? or (variables.empty? and gears.empty?)
  usage
end

begin
  container = OpenShift::Runtime::ApplicationContainer.from_uuid(container_uuid)
  rc, msg   = container.user_var_add(variables, gears)
  if rc == 0
    $stdout.puts msg
  else
    $stderr.puts msg
  end
rescue OpenShift::Runtime::Utils::ShellExecutionException => e
  $stderr.puts("#{e.message}\n#{e.stderr}")
  exit -1
rescue Exception => e
  $stderr.puts(e.message)
  exit -1
else
  exit 0
end
