def usage
  puts <<USAGE
== Synopsis

#{$0}: Gets the descriptor for a given cartridge name

== Usage

#{$0} [CART]

Options:
-h|--help:
   Prints this message

USAGE
  exit 255
end

require 'rubygems'
require 'openshift-origin-node'
require 'openshift-origin-common'
opts = GetoptLong.new(
    ["--porcelain",         "-q", GetoptLong::NO_ARGUMENT],
    ["--debug",             "-d", GetoptLong::NO_ARGUMENT],
    ["--help",              "-h", GetoptLong::NO_ARGUMENT]
)

args = {}
begin
  opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
  usage
end

if args["--help"]
  usage
end

$oo_debug = true if args['--debug']
$porcelain = args['--porcelain'] ? true : false

if ARGV[0].nil?
  $stderr.write(usage())
  exit(1)
end

cart_name = ARGV.shift
cart_found = false

begin
  cart_info = OpenShift::Runtime::Node.get_cartridge_info(cart_name, $porcelain, $oo_debug)
  puts cart_info
rescue Exception => e
  $stderr.puts(e.message)
  exit -1
else
  exit 0
end
