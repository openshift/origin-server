def usage
  puts <<USAGE
== Synopsis

  This command must be run as root.

== Usage

#{$0}  --with-app-uuid APP_UUID --with-container-uuid UUID

Options:
-h|--help:
   Prints this message

UUID: Unique identifier for the application

USAGE
  exit 255
end

require 'rubygems'
require 'openshift-origin-node'
require 'openshift-origin-node/utils/shell_exec'
opts = GetoptLong.new(
    ["--with-app-uuid",       "-a", GetoptLong::REQUIRED_ARGUMENT],
    ["--with-container-uuid", "-c", GetoptLong::REQUIRED_ARGUMENT]
)

args = {}
begin
  opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
  usage
end

if args["--help"]
  usage
end

uuid = args['--with-container-uuid']
app_uuid = args['--with-app-uuid']

unless uuid
  usage
end

begin
  container = OpenShift::Runtime::ApplicationContainer.from_uuid(uuid)
  container.remove_broker_auth
rescue Exception => e
  $stderr.puts(e.message)
  exit -1
else
  exit 0
end
