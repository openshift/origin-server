#!/bin/bash -e
set -u
set -x

version=2.6

case "$1" in
    -v|--version)
      version="$2"
esac

echo "export OPENSHIFT_PYTHON_VERSION='$version'" > "$OPENSHIFT_PYTHON_DIR/env/OPENSHIFT_PYTHON_VERSION"

# Call the version specific setup script
$OPENSHIFT_PYTHON_DIR/versions/$version/bin/setup $version
