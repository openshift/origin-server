alias rsync="rsync --exclude-from='${OPENSHIFT_PYTHON_DIR}/metadata/rsync.excludes' --delete-after -az -e '$GIT_SSH'"

upstream_ssh="<%= ENV['OPENSHIFT_GEAR_UUID'] %>@<%= ENV['OPENSHIFT_APP_NAME'] %>-${OPENSHIFT_NAMESPACE}.<%= ENV['OPENSHIFT_CLOUD_DOMAIN'] %>"

# Sync any libraries
rsync $upstream_ssh:'${OPENSHIFT_PYTHON_DIR}virtenv/venv/' ${OPENSHIFT_PYTHON_DIR}virtenv/venv/

# Build/update libs and run user pre_build and build
gear build

# Run tests
# python ${OPENSHIFT_REPO_DIR}setup.py test

# Deploy new build

# Stop app
$GIT_SSH $upstream_ssh 'gear stop'

# Push content back to application
rsync ${OPENSHIFT_PYTHON_DIR}virtenv/venv/ $upstream_ssh:'${OPENSHIFT_PYTHON_DIR}virtenv/venv/'
rsync $WORKSPACE/ $upstream_ssh:'${OPENSHIFT_REPO_DIR}'

# Configure / start app
$GIT_SSH $upstream_ssh 'gear remotedeploy'
