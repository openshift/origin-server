#!/bin/bash -eu

cartridge_instance_dir=$OPENSHIFT_MOCK_PLUGIN_DIR
source $OPENSHIFT_MOCK_PLUGIN_DIR/mock-plugin.conf

touch $MOCK_STATE/publish-db-connection-info_called

echo "OPENSHIFT_MOCK_PLUGIN_DB_USERNAME=UT_username;\
 OPENSHIFT_MOCK_PLUGIN_DB_PASSWORD=UT_password;\
 OPENSHIFT_MOCK_PLUGIN_GEAR_UUID=$OPENSHIFT_GEAR_UUID;\
 OPENSHIFT_MOCK_PLUGIN_DB_HOST=$OPENSHIFT_MOCK_PLUGIN_EXAMPLE_IP1;\
 OPENSHIFT_MOCK_PLUGIN_DB_PORT=$OPENSHIFT_MOCK_PLUGIN_EXAMPLE_PORT1;\
 OPENSHIFT_MOCK_PLUGIN_DB_URL=mock://${OPENSHIFT_MOCK_PLUGIN_EXAMPLE_IP1}:${OPENSHIFT_MOCK_PLUGIN_EXAMPLE_PORT1}/unit_test;"
exit 0
