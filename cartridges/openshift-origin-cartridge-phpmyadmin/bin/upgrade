#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

if [ -f ${OPENSHIFT_PHPMYADMIN_DIR}/env/OPENSHIFT_PHPMYADMIN_LOG_DIR ] && [ ! -L ${OPENSHIFT_PHPMYADMIN_DIR}/env/OPENSHIFT_PHPMYADMIN_LOG_DIR ]
then
    rm ${OPENSHIFT_PHPMYADMIN_DIR}/env/OPENSHIFT_PHPMYADMIN_LOG_DIR
    ln -s ~/.env/OPENSHIFT_LOG_DIR ${OPENSHIFT_PHPMYADMIN_DIR}/env/OPENSHIFT_PHPMYADMIN_LOG_DIR
fi
