Alias /phpmyadmin <%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/

<IfVersion >= 2.4>
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/">
    Require all granted
  </Directory>
  
  # We set it up for them, this should not be necessary
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/setup/">
    Require all denied
  </Directory>
  
  # These directories do not require access over HTTP - taken from the original
  # phpMyAdmin upstream tarball
  #
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/libraries/">
      Require all denied
  </Directory>
  
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/setup/lib/">
      Require all denied
  </Directory>
  
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/setup/frames/">
    Require all denied
  </Directory>
</IfVersion>
<IfVersion < 2.4>
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/">
    Order allow,deny
    Allow from all
  </Directory>
  
  # We set it up for them, this should not be necessary
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/setup/">
    Order deny,allow
    Deny from all
  </Directory>  
  
  # These directories do not require access over HTTP - taken from the original
  # phpMyAdmin upstream tarball
  #
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/libraries/">
      Order Deny,Allow
      Deny from All
      Allow from None
  </Directory>

  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/setup/lib/">
      Order Deny,Allow
      Deny from All
      Allow from None
  </Directory>
  
  <Directory "<%=ENV['OPENSHIFT_PHPMYADMIN_DIR']%>/usr/phpMyAdmin/setup/frames/">
      Order Deny,Allow
      Deny from All
      Allow from None
  </Directory>
</IfVersion>
