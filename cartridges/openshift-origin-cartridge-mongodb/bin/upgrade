#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

if [ -f ${OPENSHIFT_MONGODB_DIR}/env/OPENSHIFT_MONGODB_DB_LOG_DIR ] && [ ! -L ${OPENSHIFT_MONGODB_DIR}/env/OPENSHIFT_MONGODB_DB_LOG_DIR ]
then
    rm ${OPENSHIFT_MONGODB_DIR}/env/OPENSHIFT_MONGODB_DB_LOG_DIR
    ln -s ~/.env/OPENSHIFT_LOG_DIR ${OPENSHIFT_MONGODB_DIR}/env/OPENSHIFT_MONGODB_DB_LOG_DIR
fi
