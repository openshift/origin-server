#!/bin/bash

postgresql_url="postgresql://$OPENSHIFT_POSTGRESQL_DB_USERNAME:$OPENSHIFT_POSTGRESQL_DB_PASSWORD@$OPENSHIFT_GEAR_DNS:$OPENSHIFT_POSTGRESQL_DB_PROXY_PORT/"

echo "OPENSHIFT_POSTGRESQL_DB_GEAR_UUID=$OPENSHIFT_GEAR_UUID"
echo "OPENSHIFT_POSTGRESQL_DB_GEAR_DNS=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_POSTGRESQL_DB_USERNAME=$OPENSHIFT_POSTGRESQL_DB_USERNAME"
echo "OPENSHIFT_POSTGRESQL_DB_PASSWORD=$OPENSHIFT_POSTGRESQL_DB_PASSWORD"
echo "OPENSHIFT_POSTGRESQL_DB_HOST=$OPENSHIFT_GEAR_DNS"
echo "OPENSHIFT_POSTGRESQL_DB_PORT=$OPENSHIFT_POSTGRESQL_DB_PROXY_PORT"
echo "OPENSHIFT_POSTGRESQL_DB_URL=$postgresql_url"

# Set these variables so /usr/bin/psql works properly
echo "PGHOST=$OPENSHIFT_POSTGRESQL_DB_HOST"
echo "PGPORT=$OPENSHIFT_POSTGRESQL_DB_PROXY_PORT"
echo "PGUSER=$OPENSHIFT_POSTGRESQL_DB_USERNAME"
echo "PGPASSWORD=$OPENSHIFT_POSTGRESQL_DB_PASSWORD"
echo "PGDATABASE=$OPENSHIFT_APP_NAME"
