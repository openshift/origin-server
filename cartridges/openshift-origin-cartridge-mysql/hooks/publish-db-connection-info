#!/bin/bash

mysql_url="mysql://$OPENSHIFT_MYSQL_DB_USERNAME:$OPENSHIFT_MYSQL_DB_PASSWORD@$OPENSHIFT_GEAR_DNS:$OPENSHIFT_MYSQL_DB_PROXY_PORT/"

echo -n "OPENSHIFT_MYSQL_DB_USERNAME=$OPENSHIFT_MYSQL_DB_USERNAME; "
echo -n "OPENSHIFT_MYSQL_DB_PASSWORD=$OPENSHIFT_MYSQL_DB_PASSWORD; "
echo -n "OPENSHIFT_MYSQL_DB_HOST=$OPENSHIFT_GEAR_DNS; "
echo -n "OPENSHIFT_MYSQL_DB_PORT=$OPENSHIFT_MYSQL_DB_PROXY_PORT"
echo -n "OPENSHIFT_MYSQL_DB_URL=$mysql_url; "