#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source "${OPENSHIFT_MYSQL_DIR}/lib/mysql_context"

case "$1" in
  -v|--version)
    version="$2"
esac

mkdir -p $OPENSHIFT_MYSQL_DIR/{pid,socket,data,run}

cp ${OPENSHIFT_MYSQL_DIR}conf/my.cnf.erb ${OPENSHIFT_MYSQL_DIR}conf/my.cnf.erb.hidden

update_configuration $version
