#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

jboss_version="$1"
old_cart_version="$2"
new_cart_version="$3"

if [[ $old_cart_version =~ 0.0.[1-10] ]]; then
  if [ -e $OPENSHIFT_HOMEDIR/jbossas/metadata/jenkins_shell_command ]; then
    rm -f $OPENSHIFT_HOMEDIR/jbossas/metadata/jenkins_shell_command
  fi
fi
