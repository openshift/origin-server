#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function update-configuration() {
  if marker_present java8 || [ ${1:-undefined} == java8 ]
  then
    export JAVA_HOME=$OPENSHIFT_JBOSSAS_JDK8
  elif marker_present java7 || [ ${1:-undefined} == java7 ]
  then 
    export JAVA_HOME=$OPENSHIFT_JBOSSAS_JDK7
  else
    export JAVA_HOME=$OPENSHIFT_JBOSSAS_JDK6
  fi

  echo $JAVA_HOME > $OPENSHIFT_JBOSSAS_DIR/env/JAVA_HOME
  echo "$JAVA_HOME/bin:$M2_HOME/bin:$OPENSHIFT_JBOSSAS_DIR/bin/tools" > $OPENSHIFT_JBOSSAS_DIR/env/OPENSHIFT_JBOSSAS_PATH_ELEMENT
}
