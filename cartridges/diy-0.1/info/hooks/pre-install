#!/bin/bash

# Confirms all required diy bits are in place or fails

set -e

cartridge_type='diy-0.1'
source "/etc/stickshift/stickshift-node.conf"
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/util

[ -z "$CARTRIDGE_DIR" ] && CARTRIDGE_DIR="$CARTRIDGE_BASE_PATH/diy-0.1/"

function print_help {
    echo "Usage: uuid"
    exit 1
}

function quit {
    echo -e "$1" 1>&2
    exit 5
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done

[ $# -eq 1 ] || print_help

uuid=$1

rpm -q rhc-cartridge-raw-0.1 httpd > /dev/null || quit "Missing packages"
[ -d "$CARTRIDGE_DIR" ] || quit "Missing cartridge dir: $CARTRIDGE_DIR"
