alias rsync="rsync --delete-after -az -e '$GIT_SSH'"

# Sync libs - Faster builds
rsync UPSTREAM_SSH:~/php/phplib/ ~/php/phplib/

# Build/update libs and run user pre_build and build
gear build

# Run tests here

# Deploy new build

# Stop app
$GIT_SSH UPSTREAM_SSH 'gear stop'

# Push content back to application
rsync ~/php/phplib/ UPSTREAM_SSH:~/php/phplib/
rsync ~/$WORKSPACE/ UPSTREAM_SSH:~/app-root/repo/

# Configure / start app
$GIT_SSH UPSTREAM_SSH 'gear cideploy'