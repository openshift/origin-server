#!/bin/bash

# Creates a phpmyadmin instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t stickshift_phpmyadmin_configure
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done

[ $# -eq 3 ] || print_help

source "/etc/stickshift/stickshift-node.conf"
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/util

app_type="phpmyadmin-3.4"
setup_embedded_configure "$1" $2 $3

PHPMYADMIN_DIR=`echo $APP_HOME/phpmyadmin-3.4 | tr -s /` # ensure that there aren't double /'s
PHPMYADMIN_CTL_SCRIPT="$PHPMYADMIN_DIR/${application}_phpmyadmin_ctl.sh"

if [ ! -f "$APP_HOME/.env/OPENSHIFT_DB_USERNAME" ] ||
   [ ! -f "$APP_HOME/.env/OPENSHIFT_DB_PASSWORD" ] ||
   [ ! -f "$APP_HOME/.env/OPENSHIFT_DB_HOST" ] ||
   [ ! -f "$APP_HOME/.env/OPENSHIFT_DB_PORT" ] ||
   [ ! -d "$APP_HOME/mysql-5.1" ]
then
    client_error ""
    client_error "MySQL must be embedded before phpMyAdmin"
    client_error ""
    exit 137
fi

# check that the proxy pass include directory exists
[ -d "/etc/httpd/conf.d/stickshift/${uuid}_${namespace}_${application}" ] || error "httpd conf dir not available" 136

#
# Create the core of the application
#
if [ -d "$PHPMYADMIN_DIR" ]
then
    client_error "Embedded phpMyAdmin-3.4 already attached to $application"
    exit 132
fi
mkdir -p "$PHPMYADMIN_DIR"
pushd "$PHPMYADMIN_DIR" > /dev/null
mkdir -p conf conf.d logs run sessions tmp
ln -s /usr/lib64/httpd/modules modules
ln -s /etc/httpd/conf/magic conf/magic

sed -e "s,TEMPLATE_SET_ME_SESSION_SAVE_PATH,$PHPMYADMIN_DIR/sessions/," \
    -e "s,TEMPLATE_SET_ME_UPLOAD_TMP_DIR,$PHPMYADMIN_DIR/tmp/," $CART_CONF_DIR/php.ini > $PHPMYADMIN_DIR/conf/php.ini 
popd > /dev/null

#
# Find an open localhost IP
#
IP=`embedded_find_open_ip $uid $APP_HOME`

#
# Create simple application specific data
#

$CART_INFO_DIR/bin/deploy_httpd_config.sh $application $uuid $IP

#
# Create simple phpmyadmin start / stop script
#
ln -s $CART_INFO_DIR/bin/phpmyadmin_ctl.sh $PHPMYADMIN_CTL_SCRIPT

#
# Add config to show disabled pages instead of default apache Forbidden page
#
ln -s $CART_INFO_DIR/configuration/disabled_pages.conf $PHPMYADMIN_DIR/conf.d/disabled_pages.conf

#
# Setup Permissions
#

chown $user_id.$group_id -R $PHPMYADMIN_DIR || error "Failed to chown new phpmyadmin space.  Please contact support" 123
# Secure script and config dirs.
chown root.root -R "$PHPMYADMIN_DIR/conf" "$PHPMYADMIN_DIR/conf.d"
chown root.root "$PHPMYADMIN_DIR"
observe_setup_var_lib_dir "$PHPMYADMIN_DIR"

#
# Create environment variables. This MUST be before starting phpmyadmin as the CTL script relies on these.
#
echo "export OPENSHIFT_PHPMYADMIN_IP='$IP'" > $APP_HOME/.env/OPENSHIFT_PHPMYADMIN_IP
echo "export OPENSHIFT_PHPMYADMIN_GEAR_DIR='$PHPMYADMIN_DIR/'" > $APP_HOME/.env/OPENSHIFT_PHPMYADMIN_GEAR_DIR
echo "export OPENSHIFT_PHPMYADMIN_CTL_SCRIPT='$PHPMYADMIN_CTL_SCRIPT'" > $APP_HOME/.env/OPENSHIFT_PHPMYADMIN_CTL_SCRIPT


#
# Start the server
#
run_as_user "$PHPMYADMIN_CTL_SCRIPT start" || error "Failed to start ${application}" 121


#
# Create virtualhost definition for apache
#
$CART_INFO_DIR/bin/deploy_httpd_proxy.sh $application $namespace $uuid $IP

restart_httpd_graceful


# Grab the env vars so we can print them
. $APP_HOME/.env/OPENSHIFT_DB_USERNAME
. $APP_HOME/.env/OPENSHIFT_DB_PASSWORD
. $APP_HOME/.env/OPENSHIFT_GEAR_DNS


client_result ""
client_result "phpMyAdmin 3.4 added.  Please make note of these MySQL credentials again:"
client_result ""
client_result "   Root User: $OPENSHIFT_DB_USERNAME"
client_result "   Root Password: $OPENSHIFT_DB_PASSWORD"
client_result ""
client_result "URL: https://$OPENSHIFT_GEAR_DNS/phpmyadmin/"

set_app_info "URL: https://$OPENSHIFT_GEAR_DNS/phpmyadmin/"
